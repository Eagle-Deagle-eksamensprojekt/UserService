{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "A unique identifier for the user (MongoDB ObjectId).",
        "pattern": "^[a-fA-F0-9]{24}$"
      },
      "userId": {
        "type": "string",
        "description": "A secondary unique identifier for use in the system (more human-readable)."
      },
      "firstname": {
        "type": "string",
        "description": "The user's first name."
      },
      "lastname": {
        "type": "string",
        "description": "The user's last name."
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "The user's email address."
      },
      "address": {
        "type": "string",
        "description": "The user's physical address."
      },
      "password": {
        "type": "string",
        "description": "The user's hashed password."
      },
      "phoneNumber": {
        "type": "string",
        "pattern": "^[0-9]{8,15}$",
        "description": "The user's phone number, 8-15 digits."
      },
      "createdDate": {
        "type": "string",
        "format": "date-time",
        "description": "The date and time when the user was created."
      },
      "isAdmin": {
        "type": "boolean",
        "description": "Specifies whether the user has administrative privileges."
      },
      "isSeller": {
        "type": "boolean",
        "description": "Specifies whether the user has seller permissions."
      }
    },
    "required": [
      "id",
      "firstname",
      "lastname",
      "email",
      "password",
      "phoneNumber",
      "createdDate",
      "isAdmin",
      "isSeller"
    ]
  }
  